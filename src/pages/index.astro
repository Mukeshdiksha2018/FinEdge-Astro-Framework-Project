---
import MainLayout from "../layouts/MainLayout.astro";
import "bootstrap/dist/css/bootstrap.css";
let title = "FinEdge";
---

<MainLayout>
    <main>
        <div class="px-4 py-5 my-5 text-center">
            <h1 class="display-5 fw-bold text-body-emphasis">FinEdge</h1>
            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4">
                    FinEdge is a cutting-edge fintech startup focused on
                    transforming cross-border payments. We believe in a world
                    where geographic boundaries should not limit individuals and
                    businesses from making seamless transactions.
                </p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <button
                        type="button"
                        class="btn btn-success btn-lg px-4 gap-3"
                        >Primary button</button
                    >
                    <button
                        type="button"
                        class="btn btn-outline-secondary btn-lg px-4"
                        >Secondary</button
                    >
                </div>
            </div>
        </div>
    </main>
</MainLayout>
